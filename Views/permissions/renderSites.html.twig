{% spaceless %}
{%- if sites|length > 0 %}

  <div class="36 alpha omega">
    <div class="push_18 grid_18 omega">
      <input type="text" name="filter" class="filter" id="filterSites" placeholder="Type to filter" />
    </div>
  </div>
  <table class="fancy sortable filterable fullWidth">
    <thead>
      <tr>
        <th>Site Root</th>
        <th>Excluded Files</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {% for site in sites %}
        {% if not isSuperUser and site['siteRoot'] != '/' or isSuperUser %}
          <tr>
            <td>{{ site['siteRoot'] }}</td>
            <td style="word-break:break-all;">{{ site['excludedFiles'] }}</td>
            <td><a href="{{ buildUrl('editSite', {'site': site['id']}) }}" class="button" style="display: inline;">Edit</a><a href="{{ buildUrl('deleteSite', {'site': site['id']}) }}" class="button" style="display: inline;">Delete</a></td>
          </tr>
        {% endif %}
      {% endfor %}
    </tbody>
  </table>

{%- endif -%}

{% endspaceless %}