{% spaceless %}
  {{ scripts|raw }}
  Are you sure you want to delete the site: <strong>{{ site }}</strong>?
  <form action="{{ actionUrl }}" method="post" id="concertDelete">
    <input type="hidden" name="siteId" value="{{ siteId }}" />
    <button type="submit" name="deleteAction" value="confirmDelete" class="deleteAction button red">Delete</button>&nbsp;
    <button type="submit" name="deleteAction" value="cancelDelete" class="deleteAction button darkgray">Cancel</button>
  </form>
{% endspaceless %}