{% spaceless %}
<div class="grid-100 alpha omega">
  <h3>Are you sure?</h3>
  <form action="{{ url }}" method="POST">
    <div class="grid-90 alpha omega suffix-5 prefix-5">
      <label>Message for user
        <textarea name="message" class=" alpha omega grid-100"></textarea>
      </label>
    </div>
    <div class="grid-90 alpha omega suffix-5 prefix-5">
      {%- if forPublish -%}
        <button type="submit" name="action" value="publish" class="button">Publish</button>
      {%- else -%}
        <button type="submit" name="action" value="reject" class="button red">Reject</button>
      {%- endif -%}
      &nbsp;<button type="submit" name="action" value="cancel" class="button darkgray">Cancel</button>
    </div>
  </form>
</div>
{% endspaceless %}