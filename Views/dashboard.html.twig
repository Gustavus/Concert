{#
  Renders top users with their count of published actions

  param: stats Array of stats
#}
{% macro renderUserStats(stats) %}
  <table class="fancy fullWidth">
    <legend>Top Users</legend>
    <thead>
      <tr>
        <th>Username</th>
        <th>Total Actions</th>
      </tr>
    </thead>
    <tbody>
      {% for stat in stats %}
        <tr>
          <td>{{ stat['username'] }}</td>
          <td>{{ stat['publishCount'] }}</td>
      {% endfor %}
    </tbody>
  </table>
{% endmacro %}